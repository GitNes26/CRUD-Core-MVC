@model Profile;
@{
    ViewBag.Single = "Perfil";
    ViewBag.Plural = "Perfiles";
}
<h1 class="fw-bolder">EDITAR @ViewBag.Single.ToUpper() </h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Menus" class="control-label"></label>
                <input asp-for="Menus" class="form-control" />
                <span asp-validation-for="Menus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success fw-bolder text-uppercase" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}